                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid MaxWidth="15.5"
                                                          MaxHeight="15.5"
                                                          MinWidth="15.5"
                                                          MinHeight="15.5">
                                                        <iconPacks:PackIconMaterial Kind="Check"
                                                                                    Foreground="Green" >
                                                            <iconPacks:PackIconMaterial.Visibility>
                                                                <MultiBinding Converter="{StaticResource IngredientToVisibility}"
                                                                              FallbackValue="Modular Terminals"
                                                                              Mode="OneWay">
                                                                    <Binding Path="Entry.Count"/>
                                                                    <Binding Path="Size"/>
                                                                </MultiBinding>
                                                            </iconPacks:PackIconMaterial.Visibility>
                                                        </iconPacks:PackIconMaterial>
                                                        <iconPacks:PackIconMaterial Kind="Close"
                                                                                    Foreground="Red" 
                                                                                    Width="15"
                                                                                    Height="15">
                                                            <iconPacks:PackIconMaterial.Visibility>
                                                                <MultiBinding Converter="{StaticResource IngredientToVisibility}"
                                                                              FallbackValue="Modular Terminals"
                                                                              Mode="OneWay"
                                                                              ConverterParameter="Inverted">
                                                                    <Binding Path="Entry.Count"/>
                                                                    <Binding Path="Size"/>
                                                                </MultiBinding>
                                                            </iconPacks:PackIconMaterial.Visibility>
                                                        </iconPacks:PackIconMaterial>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <ItemsControl ItemsSource="{Binding DataContext.ShoppingList.Composition, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Right"
                                                  FontSize="15">
