                                                    <Button Content="-"
                                                            Tag="{Binding Item1}"
                                                            Click="DecrementShoppingList"
                                                            Foreground="Red"
                                                            FontWeight="Black"
                                                            VerticalAlignment="Center"
                                                            VerticalContentAlignment="Center"
                                                            FontSize="22"
                                                            Style="{DynamicResource ChromelessButtonStyle}"
                                                            Margin="5,0,5,0"
                                                            Grid.Column="0" />
                                                    <TextBlock Text="{Binding Item2}"
                                                               VerticalAlignment="Center"
