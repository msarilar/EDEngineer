            <TextBlock HorizontalAlignment="Stretch"
                       FontSize="16"
                       Grid.Column="2"
                       Foreground="{StaticResource EliteOrangeBrush}"
                       Margin="10,0,0,0"
                       TextAlignment="Left"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontFamily="/Resources/Fonts/#Euro Caps">
                <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Last update: ', FallbackValue='Last Update: '}" />
                <Run Text="{Binding CurrentCommander.Value.LastUpdate, Converter={StaticResource InstantToString}}"></Run>
                <Run Text=" (UTC)"/>
            </TextBlock>
            <Button HorizontalAlignment="Right"
                    FontSize="15"
                    Grid.Column="3"
                    Foreground="DarkCyan"
                    Background="Transparent"
                    Margin="0,0,10,0"
                    Style="{DynamicResource ChromelessButtonStyle}"
                    Click="ChangeFolderButtonClicked"
                    FontFamily="/Resources/Fonts/#Euro Caps">
                <TextBlock Text="{Binding LogDirectory}" TextWrapping="Wrap" />
            </Button>
        </Grid>
    </Grid>

</Window>