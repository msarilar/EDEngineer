<Window x:Class="EDEngineer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:localization="clr-namespace:EDEngineer.Localization"
        xmlns:views="clr-namespace:EDEngineer.Views"
        mc:Ignorable="d"
        Title="EDEngineer"
        Topmost="True"
        WindowStyle="None"
        Background="Transparent"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:f="clr-namespace:EDEngineer.Utils.UI"
        AllowsTransparency="True"
        Icon="/Resources/Images/elite-dangerous-clean.png"
        d:DesignWidth="1152"
        d:DesignHeight="648"
        ShowInTaskbar="False"
        Loaded="MainWindowLoaded"
        d:DataContext="{d:DesignData Source=../DesignTime/DesignViewModel.xaml}"
        ResizeMode="CanResize">
    <Window.Resources>
        <DataTemplate x:Key="EntryTemplate">
            <Grid Background="{StaticResource BackgroundBrush}"   
                  MouseDown="IngredientOnMouseLeftButtonDown"
                  Tag="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
                <Grid.ToolTip>
                    <ToolTip Tag="{Binding PlacementTarget.DataContext.Value.Data.OriginDetails, RelativeSource={x:Static RelativeSource.Self}}"
                             DataContext="{Binding Path=PlacementTarget, RelativeSource={x:Static RelativeSource.Self}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock FontWeight="Bold"
                                       Text="{Binding Tag.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Unrecognized Ingredient (showing name as it appears in the logs). Please open a GitHub issue to let the author know what is the real name of this!'}"
                                       Visibility="{Binding DataContext.Value.Data.Kind, Converter={StaticResource KindToVisibility}}"/>
                            <TextBlock FontWeight="Bold"
                                       Grid.Row="1"
                                       Text="{Binding Tag.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Ingredient not used in any blueprint!'}"
                                       Visibility="{Binding DataContext.Value.Data.Unused, Converter={StaticResource BooleanToVisibility}}"/>
                            <Border BorderThickness="1"
                                    BorderBrush="Black"
                                    Grid.Row="2"
                                    Visibility="{Binding DataContext.Value.Data.Unused, Converter={StaticResource BooleanToVisibility}}"/>
                            <TextBlock FontWeight="Bold"
                                       Text="{Binding DataContext.Value.Data.Subkind, Converter={x:Static localization:Languages.Instance}}"
                                       Visibility="{Binding DataContext.Value.Data.Subkind, Converter={StaticResource NullableToVisibility}}"
                                       Grid.Row="3">
                            </TextBlock>
                            <ItemsControl ItemsSource="{Binding DataContext.Value.Data.OriginDetails}"
                                          Grid.Row="4">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Mission rewards">
                                                    <Binding Path=""/>
                                                    <Binding Path="DataContext.Languages.CurrentLanguage"
                                                             RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                </MultiBinding>
                                            </TextBlock.Text></TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Grid.Row="5">
                                <Run Text="{Binding Tag.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Carrying '}"></Run>
                                <Run Text="{Binding DataContext.Value.Count}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding DataContext.Value.Data.Rarity, Converter={StaticResource RarityToMaximumCapacity}}"/>
                            </TextBlock>
                            <Border BorderThickness="1"
                                    BorderBrush="Black"
                                    Grid.Row="6"/>
                            <TextBlock FontWeight="Bold"
                                       Grid.Row="7"
                                       Text="{Binding Tag.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Top Source Systems'}"/>
                            <ItemsControl Grid.Row="8">
                                <ItemsControl.ItemsSource>
                                    <MultiBinding Converter="{StaticResource HistoryToTop5Converter}" FallbackValue="Sol (5)">
                                        <Binding Path="Tag.CurrentCommander.Value.State.History"/>
                                        <Binding Path="DataContext.Value.Data.Name"/>
                                    </MultiBinding>
                                </ItemsControl.ItemsSource>
                            </ItemsControl>
                        </Grid>
                    </ToolTip>
                </Grid.ToolTip>
                <Border BorderBrush="{Binding Value.Highlighted, Converter={StaticResource BooleanToHighlightColor}}"
                        BorderThickness="1"
                        Opacity="{Binding Value.Data.Unused, Converter={StaticResource BooleanToOpacity}}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Grid.Row="0">
                            <Image Source="{Binding Value.Data.Rarity, Converter={StaticResource RarityToIcon}, FallbackValue={StaticResource DesignRaritySource}}"
                                   HorizontalAlignment="Left"
                                   Width="20"
                                   Height="20"
                                   Margin="3,0,3,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   VerticalAlignment="Center" />
                            <TextBlock FontFamily="/Resources/Fonts/#Euro Caps"
                                       FontSize="15"
                                       Margin="2,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Value.Highlighted, Converter={StaticResource BooleanToHighlightColor}}" >
                                <TextBlock.Text>
                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Modular Terminals">
                                        <Binding Path="Value.Data.Name"/>
                                        <Binding Path="DataContext.Languages.CurrentLanguage"
                                                 RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Image Source="{Binding Value.Data.Subkind, Converter={StaticResource SubkindToIcon}}"
                                   HorizontalAlignment="Left"
                                   Width="20"
                                   Height="20"
                                   Margin="5,0,3,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Visibility="{Binding DataContext.ShowOriginIcons, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={StaticResource BooleanToVisibility}}"
                                   VerticalAlignment="Center" />
                        </StackPanel>

                        <Grid HorizontalAlignment="Right"
                              Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition x:Name="PART_TextBoxColumn" Width="*" />
                                <ColumnDefinition x:Name="PART_NumericUpColumn" Width="Auto" />
                                <ColumnDefinition x:Name="PART_NumericDownColumn" Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ItemsControl ItemsSource="{Binding Value.Data.Origins}"
                                          Grid.Column="0"
                                          Visibility="{Binding DataContext.ShowOriginIcons, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={StaticResource BooleanToVisibility}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="FrameworkElement.Margin" Value="3"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Template="{Binding Converter={StaticResource OriginToControlTemplate}}" 
                                           Width="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{Binding Converter={StaticResource OriginToColor}}"
                                           Height="18"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ContentControl x:Name="PART_FloatingMessageContainer"
                                            Grid.Column="1"
                                            Style="{DynamicResource FloatingMessageContainerStyle}">
                                <TextBlock x:Name="PART_FloatingMessage"
                                           Style="{DynamicResource MetroAutoCollapsingTextBlock}"
                                           Text="{TemplateBinding controls:TextBoxHelper.Watermark}" />
                            </ContentControl>

                            <StackPanel Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial Kind="Star"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding Value.FavoriteCount, Converter={StaticResource IntegerToVisibility}, Mode=OneWay}"
                                                            Foreground="{StaticResource EliteOrangeBrush}" />
                                <iconPacks:PackIconMaterial Kind="Star"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding Value.SynthesisFavoriteCount, Converter={StaticResource IntegerToVisibility}, Mode=OneWay}"
                                                            Foreground="{StaticResource SynthesisBlueBrush}" />
                                <TextBox HorizontalAlignment="Right"
                                         Foreground="{Binding Value.Highlighted, Converter={StaticResource BooleanToHighlightColor}}"
                                         Background="Transparent"
                                         VerticalAlignment="Center"
                                         BorderBrush="Transparent"
                                         FontSize="15"
                                         GotFocus="EntryCountTextBoxOnFocussed"
                                         LostFocus="EntryCountTextBoxOnLostFocus"
                                         PreviewTextInput="EntryCountTextBoxOnPreviewTextInput"
                                         x:Name="EntryCountTextBox"
                                         Tag="{Binding Value}"
                                         CaretBrush="White"
                                         FontFamily="/EDEngineer;component/NewFolder1/#Telegrama Render"
                                         Text="{Binding Value.Count, Mode=OneWay}" />
                            </StackPanel>
                            <Button x:Name="IncrementButton"
                                    Grid.Column="2"
                                    Margin="2 2 2 2"
                                    Tag="{Binding Value}"
                                    Style="{DynamicResource ChromelessButtonStyle}"
                                    Click="IncrementButtonClicked"
                                    IsTabStop="False">
                                <Path x:Name="PolygonUp"
                                      Width="14"
                                      Height="14"
                                      Fill="{DynamicResource GrayBrush1}"
                                      Data="F1 M 35,19L 41,19L 41,35L 57,35L 57,41L 41,41L 41,57L 35,57L 35,41L 19,41L 19,35L 35,35L 35,19 Z "
                                      Stretch="Fill" />
                            </Button>
                            <Button x:Name="DecrementButton"
                                    Grid.Column="3"
                                    Margin="0 2 2 2"
                                    VerticalContentAlignment="Center"
                                    Click="DecrementButtonClicked"
                                    Tag="{Binding Value}"
                                    Style="{DynamicResource ChromelessButtonStyle}"
                                    IsTabStop="False">
                                <Path x:Name="PolygonDown"
                                      Width="14"
                                      Height="3"
                                      Fill="{DynamicResource GrayBrush1}"
                                      Data="F1 M 19,38L 57,38L 57,44L 19,44L 19,38 Z "
                                      Stretch="Fill" />
                            </Button>
                        </Grid>

                        <Grid Grid.Row="1">
                            <controls:MetroProgressBar Value="{Binding Value.CarryingProgress, Mode=OneWay}"
                                                       Background="Transparent"
                                                       Foreground="{StaticResource EliteOrangeBrush}" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
        <Storyboard x:Key="WindowActivated">
            <DoubleAnimation Storyboard.TargetProperty="(Window.Opacity)"
                             From="0.0" To="1.0"
                             Completed="WindowActivatedCompleted"
                             Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="WindowDeactivated">
            <DoubleAnimation Storyboard.TargetProperty="(Window.Opacity)"
                             From="1.0" To="0.0"
                             Completed="WindowDeactivatedCompleted"
                             Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>

    <Grid Opacity="{Binding GraphicSettings.Opacity}"
          Background="{StaticResource BackgroundBrush}"
          x:Name="ContentGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MaxHeight="27" />
        </Grid.RowDefinitions>

        <!-- COMMANDERS -->

        <TabControl ItemsSource="{Binding Commanders}"
                    SelectedItem="{Binding CurrentCommander, Mode=TwoWay}"
                    Visibility="{Binding Commanders.Count, Converter={StaticResource IntegerToVisibility}, Mode=OneWay, ConverterParameter=1}"
                    Height="35"
                    Grid.Row="0"
                    Background="{StaticResource BlackBrush}"
                    Grid.ColumnSpan="3"
                    Margin="10,0,0,0">
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <TabItem Height="0" />
                </DataTemplate>
            </TabControl.ContentTemplate>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Value}"
                               FontFamily="/Resources/Fonts/#Euro Caps"
                               FontSize="25" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>

        <!-- LEFT SIDE -->

        <Grid Grid.Column="0"
              Grid.Row="1">
            <i:Interaction.Behaviors>
                <f:ScaleFontBehavior FontRatio="{Binding DataContext.GraphicSettings.LeftRatio, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
            </i:Interaction.Behaviors>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- CARGO FILTERS -->

            <Grid Grid.Row="0"
                  Height="31"
                  Visibility="{Binding CurrentCommander.Value.HighlightedEntryData.Count, Converter={StaticResource IntegerToVisibilityReversed}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ToggleButton HorizontalAlignment="Stretch"
                              FontSize="16"
                              FontFamily="/Resources/Fonts/#Euro Caps"
                              Grid.Column="0"
                              ToolTip="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Show entries with no stock?'}"
                              IsChecked="{Binding ShowZeroes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconMaterial Kind="Texture" />
                </ToggleButton>
                <ToggleButton HorizontalAlignment="Stretch"
                              FontSize="16"
                              FontFamily="/Resources/Fonts/#Euro Caps"
                              Grid.Column="1"
                              ToolTip="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Show only for favorites?'}"
                              IsChecked="{Binding ShowOnlyForFavorites, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconMaterial Kind="Star" Foreground="{StaticResource EliteOrangeBrush}" />
                </ToggleButton>
                <ToggleButton HorizontalAlignment="Stretch"
                              FontSize="16"
                              FontFamily="/Resources/Fonts/#Euro Caps"
                              Grid.Column="2"
                              ToolTip="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Show information about resources?'}"
                              IsChecked="{Binding ShowOriginIcons, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconMaterial Kind="InformationOutline" Foreground="{StaticResource EliteOrangeBrush}" />
                </ToggleButton>
                <ToggleButton HorizontalAlignment="Stretch"
                              FontSize="16"
                              FontFamily="/Resources/Fonts/#Euro Caps"
                              Grid.Column="3"
                              ToolTip="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Group ingredients?'}"
                              IsChecked="{Binding IngredientsGrouped, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconMaterial Kind="PackageVariantClosed" Foreground="{StaticResource EliteOrangeBrush}" />
                </ToggleButton>
                <Border BorderBrush="{StaticResource EliteOrangeBrush}"
                        BorderThickness="2"
                        Grid.Column="4">
                    <ComboBox ItemsSource="{Binding Comparers}"
                                SelectedItem="{Binding CurrentComparer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalContentAlignment="Center"
                                Background="{StaticResource BackgroundBrush}"
                                Foreground="{StaticResource EliteOrangeBrush}"
                                FontFamily="/Resources/Fonts/#Euro Caps">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                            <Binding/>
                                            <Binding Path="DataContext.Languages.CurrentLanguage"
				                                        RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>

            </Grid>

            <!-- HIGHLIGHTED RECAP -->

            <Button Grid.Row="0"
                    x:Name="UnhighlightButton"
                    Height="31"
                    Click="UnhighlightButtonClicked"
                    Style="{StaticResource UnhighlightButtonStyle}"
                    Visibility="{Binding CurrentCommander.Value.HighlightedEntryData.Count, Converter={StaticResource IntegerToVisibility}, Mode=OneWay}">
                <Button.Content>
                    <TextBlock Foreground="{StaticResource EliteOrangeBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontFamily="/Resources/Fonts/#Euro Caps"
                               x:Name="UnhighlightButtonText">
                        <Run Text="{Binding CurrentCommander.Value.HighlightedEntryData.Count, Mode=OneWay}"/>
                        <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='filtered entries - click this to clear'}"></Run>
                    </TextBlock>
                </Button.Content>
            </Button>

            <UniformGrid Columns="3" Margin="5,0" Opacity="0" Grid.Row="1">
                <Grid x:Name="c1"/>
                <Grid/>
            </UniformGrid>

            <controls:MetroTabControl Grid.Row="1"
                                      Background="Black"
                                      SelectedIndex="{Binding CargoTabIndex, Mode=TwoWay}">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>

                <controls:MetroTabItem FontFamily="/Resources/Fonts/#Euro Caps"
                                       Header="{Binding}"
                                       Width="{Binding ElementName=c1, Path=ActualWidth}">
                    <controls:MetroTabItem.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center"
                                       Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Materials'}"/>
                        </DataTemplate>
                    </controls:MetroTabItem.HeaderTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0">
                            <ItemsControl Background="Transparent"
                                              x:Name="Materials"
                                              ItemsSource="{Binding CurrentCommander.Value.State.Cargo}"
                                              ItemTemplate="{StaticResource EntryTemplate}">
                                <ItemsControl.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="FrameworkElement.Margin" Value="3" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.ContainerStyle>
                                            <Style TargetType="{x:Type GroupItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                                            <Expander IsExpanded="True"
                                                                      Padding="0"
                                                                      Style="{StaticResource GroupExpander}">
                                                                <Expander.Header>
                                                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                                        <Binding Path="Name" Converter="{StaticResource EnumToDescription}" />
                                                                        <Binding Path="DataContext.Languages.CurrentLanguage"
                                                                                 RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                                    </MultiBinding>
                                                                </Expander.Header>
                                                                <ItemsPresenter Margin="0"/>
                                                            </Expander>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </GroupStyle.ContainerStyle>
                                    </GroupStyle>
                                </ItemsControl.GroupStyle>
                            </ItemsControl>
                        </ScrollViewer>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <RadioButton Margin="10,6,10,6"
                                         Foreground="{StaticResource EliteOrangeBrush}"
                                         Background="Transparent"
                                         IsChecked="True"
                                         x:Name="ShowAllMaterialsRadioButton"
                                         Checked="MaterialSubkindFilterChecked">
                                <RadioButton.Content>
                                    <TextBlock Text="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='All'}"
                                               FontFamily="/Resources/Fonts/#Euro Caps"/>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Margin="10,6,10,6"
                                         Foreground="{StaticResource EliteOrangeBrush}"
                                         Background="Transparent"
                                         x:Name="ShowOnlyRawMaterialsRadioButton"
                                         Checked="MaterialSubkindFilterChecked">
                                <RadioButton.Content>
                                    <TextBlock Text="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Raw Only'}"
                                               FontFamily="/Resources/Fonts/#Euro Caps"/>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Margin="10,6,10,6"
                                         Foreground="{StaticResource EliteOrangeBrush}"
                                         Background="Transparent"
                                         x:Name="ShowOnlyManufacturedMaterialsButton"
                                         Checked="MaterialSubkindFilterChecked">
                                <RadioButton.Content>
                                    <TextBlock Text="{Binding Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Manufactured Only'}"
                                               FontFamily="/Resources/Fonts/#Euro Caps"/>
                                </RadioButton.Content>
                            </RadioButton>
                        </StackPanel>
                    </Grid>
                </controls:MetroTabItem>
                
                <controls:MetroTabItem Header="{Binding}"
                                       FontFamily="/Resources/Fonts/#Euro Caps"
                                       HorizontalAlignment="Center"
                                       Width="{Binding ElementName=c1, Path=ActualWidth}">
                    <controls:MetroTabItem.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center"
                                       Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Data'}"/>
                        </DataTemplate>
                    </controls:MetroTabItem.HeaderTemplate>
                    <ScrollViewer>
                        <ItemsControl Background="Transparent"
                                    x:Name="Data"
                                    ItemTemplate="{StaticResource EntryTemplate}">
                            <ItemsControl.ItemContainerStyle>
                                <Style>
                                    <Setter Property="FrameworkElement.Margin" Value="3" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Expander IsExpanded="True"
                                                                  Padding="0"
                                                                  Style="{StaticResource GroupExpander}">
                                                            <Expander.Header>
                                                                <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                                    <Binding Path="Name" Converter="{StaticResource EnumToDescription}" />
                                                                    <Binding Path="DataContext.Languages.CurrentLanguage"
                                                                             RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                                </MultiBinding>
                                                            </Expander.Header>
                                                            <ItemsPresenter Margin="0"/>
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </ItemsControl.GroupStyle>
                        </ItemsControl>
                    </ScrollViewer>
                </controls:MetroTabItem>

                <controls:MetroTabItem Header="{Binding}"
                                       FontFamily="/Resources/Fonts/#Euro Caps"
                                       HorizontalAlignment="Center"
                                       Width="{Binding ElementName=c1, Path=ActualWidth}">
                    <controls:MetroTabItem.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center"
                                       Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Loadout'}"/>
                        </DataTemplate>
                    </controls:MetroTabItem.HeaderTemplate>
                    <Grid Margin="15"
                              DataContext="{Binding CurrentCommander.Value.State.Loadout}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Loadout.Ship, Mode=OneWay}"
                                       FontSize="22"
                                       Foreground="AntiqueWhite"
                                       HorizontalAlignment="Center"
                                       FontFamily="/Resources/Fonts/#Telegrama Render"
                                       Visibility="{Binding Loadout.Ship, Converter={StaticResource NullableToVisibility}}"
                                       Grid.Row="0"/>
                            <TextBlock Text="{Binding Loadout.ShipName, Mode=OneWay}"
                                       FontSize="20"
                                       Foreground="AntiqueWhite"
                                       HorizontalAlignment="Left"
                                       FontFamily="/Resources/Fonts/#Telegrama Render"
                                       Visibility="{Binding Loadout.ShipName, Converter={StaticResource NullableToVisibility}}"
                                       Grid.Row="1"/>
                            <TextBlock Text="{Binding Loadout.ShipIdent, Mode=OneWay}"
                                       FontSize="20"
                                       Foreground="AntiqueWhite"
                                       HorizontalAlignment="Right"
                                       FontFamily="/Resources/Fonts/#Telegrama Render"
                                       Visibility="{Binding Loadout.ShipIdent, Converter={StaticResource NullableToVisibility}}"
                                       Grid.Row="1"/>
                        </Grid>
                        <ScrollViewer Grid.Row="1">
                            <ScrollViewer.Resources>
                                <CollectionViewSource x:Key="GroupedModules"
                                                      Source="{Binding Loadout.Modules}">
                                    <CollectionViewSource.GroupDescriptions>
                                        <PropertyGroupDescription PropertyName="Category" />
                                    </CollectionViewSource.GroupDescriptions>
                                </CollectionViewSource>
                            </ScrollViewer.Resources>
                            <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedModules}}"
                                          ItemTemplate="{StaticResource ModuleTemplate}"
                                          >
                                <ItemsControl.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.ContainerStyle>
                                            <Style TargetType="{x:Type GroupItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                                            <Expander IsExpanded="True"
                                                                  Padding="0"
                                                                  Style="{StaticResource GroupExpander}">
                                                                <Expander.Header>
                                                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                                        <Binding Path="Name" Converter="{StaticResource EnumToDescription}" />
                                                                        <Binding Path="DataContext.Languages.CurrentLanguage"
                                                                             RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                                    </MultiBinding>
                                                                </Expander.Header>
                                                                <ItemsPresenter Margin="0"/>
                                                            </Expander>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </GroupStyle.ContainerStyle>
                                    </GroupStyle>
                                </ItemsControl.GroupStyle>
                            </ItemsControl>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Right">
                            <TextBlock Foreground="Wheat"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding Loadout.ShipValue, Converter={StaticResource NullableToVisibility}}">
                                <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Ship Value:'}"/>
                                <Run Text="{Binding Loadout.ShipValue, Mode=OneWay, StringFormat=N0}"/>
                            </TextBlock>
                            <TextBlock Foreground="Wheat"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding Loadout.ModulesValue, Converter={StaticResource NullableToVisibility}}">
                                <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Modules Value:'}"/>
                                <Run Text="{Binding Loadout.ModulesValue, Mode=OneWay, StringFormat=N0}" />
                            </TextBlock>
                            <TextBlock Foreground="Wheat"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding Loadout.Rebuy, Converter={StaticResource NullableToVisibility}}">
                                <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Rebuy:'}"/>
                                <Run Text="{Binding Loadout.Rebuy, Mode=OneWay, StringFormat=N0}"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </controls:MetroTabItem>
            </controls:MetroTabControl>
        </Grid>

        <!-- SPLITTER -->
        <GridSplitter Grid.Column="1"
                      Width="3"
                      Grid.Row="1"
                      x:Name="MainSplitter"
                      HorizontalAlignment="Stretch" />

        <!-- RIGHT SIDE -->

        <Grid Grid.Column="2"
              Grid.Row="1"
              DataContext="{Binding CurrentCommander.Value}">
            <i:Interaction.Behaviors>
                <f:ScaleFontBehavior FontRatio="{Binding DataContext.GraphicSettings.RightRatio, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
            </i:Interaction.Behaviors>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- FIlTERS (TOP) -->

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <controls:DropDownButton ItemsSource="{Binding Filters.GradeFilters}"
                                             Content="{Binding Filters.GradeFilters, Converter={StaticResource AllFiltersToHeader}, ConverterParameter='Grade', FallbackValue='Grade Filter (4/5)'}"
                                             Grid.Row="0"
                                             Grid.Column="0">
                        <controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Width="120"
                                              IsChecked="{Binding Checked, Mode=TwoWay}" >
                                        <TextBlock Width="100" >
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                    <Binding Converter="{StaticResource FilterToLabel}"/>
                                                    <Binding Path="DataContext.Languages.CurrentLanguage"
				                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </CheckBox>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DropDownButton.ItemTemplate>
                    </controls:DropDownButton>

                    <controls:DropDownButton ItemsSource="{Binding Filters.EngineerFilters}"
                                             Content="{Binding Filters.EngineerFilters, Converter={StaticResource AllFiltersToHeader}, ConverterParameter='Engineer', FallbackValue='Engineer Filter (4/5)'}"
                                             Grid.Row="0"
                                             Grid.Column="1">
                        <controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Width="120"
                                              IsChecked="{Binding Checked, Mode=TwoWay}" >
                                    <TextBlock Width="100" >
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                <Binding Converter="{StaticResource FilterToLabel}"/>
                                                <Binding Path="DataContext.Languages.CurrentLanguage"
				                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </CheckBox>
                            </DataTemplate>
                        </controls:DropDownButton.ItemTemplate>
                    </controls:DropDownButton>

                    <controls:DropDownButton ItemsSource="{Binding Filters.TypeFilters}"
                                             Content="{Binding Filters.TypeFilters, Converter={StaticResource AllFiltersToHeader}, ConverterParameter='Type', FallbackValue='Type Filter (4/5)'}"
                                             Grid.Row="0"
                                             Grid.Column="2">
                        <controls:DropDownButton.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Width="575"
                                           MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}" />
                            </ItemsPanelTemplate>
                        </controls:DropDownButton.ItemsPanel>
                        <controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Width="220"
                                          IsChecked="{Binding Checked, Mode=TwoWay}" >
                                    <TextBlock Width="200">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                <Binding Converter="{StaticResource FilterToLabel}"/>
                                                <Binding Path="DataContext.Languages.CurrentLanguage"
				                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </CheckBox>
                            </DataTemplate>
                        </controls:DropDownButton.ItemTemplate>
                    </controls:DropDownButton>

                    <controls:DropDownButton ItemsSource="{Binding Filters.IgnoredFavoriteFilters}"
                                             Content="{Binding Filters.IgnoredFavoriteFilters, Converter={StaticResource AllFiltersToHeader}, ConverterParameter='IgnoredAndFavorite', FallbackValue='Ignored And Favorite Filter (4/5)'}"
                                             Grid.Row="1"
                                             Grid.Column="0">
                        <controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <CheckBox MinWidth="120"
                                          IsChecked="{Binding Checked, Mode=TwoWay}">
                                    <TextBlock Width="100">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                <Binding Path="Label"/>
                                                <Binding Path="DataContext.Languages.CurrentLanguage"
				                                        RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </CheckBox>
                            </DataTemplate>
                        </controls:DropDownButton.ItemTemplate>
                    </controls:DropDownButton>

                    <controls:DropDownButton ItemsSource="{Binding Filters.CraftableFilters}"
                                             Content="{Binding Filters.CraftableFilters, Converter={StaticResource AllFiltersToHeader}, ConverterParameter='Craftable', FallbackValue='Craftable Filter (4/5)'}"
                                             Grid.Row="1"
                                             Grid.Column="1">
                        <controls:DropDownButton.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Width="20"
                                              IsChecked="{Binding Checked, Mode=TwoWay}" />
                                    <TextBlock Width="Auto" >
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                <Binding Path="Label" />
                                                <Binding Path="DataContext.Languages.CurrentLanguage"
				                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DropDownButton.ItemTemplate>
                    </controls:DropDownButton>

                    <TextBox x:Name="SearchBox"
                             Grid.Row="1"
                             Grid.Column="2"
                             FontSize="12"
                             Text="{Binding Filters.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=200}"
                             Style="{StaticResource PlaceHolderStyle}"
                             Tag="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Search', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                             ToolTip="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Search visible blueprints (by Type, Name, Grade or Engineer) - split your terms with a space for multi-criteria search', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />

                    <Grid Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                Click="SettingsButtonClicked"
                                ToolTip="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Settings', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                Style="{DynamicResource ChromelessButtonStyle}">
                            <iconPacks:PackIconMaterial Kind="Settings" Foreground="Magenta" />
                        </Button>
                        <Button Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                Click="CheckAllButtonClicked"
                                Style="{DynamicResource ChromelessButtonStyle}"
                                ToolTip="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Check all filters', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                x:Name="CheckAllButton">
                            <iconPacks:PackIconMaterial Kind="CheckAll" Foreground="{StaticResource EliteOrangeBrush}" />
                        </Button>
                        <Button Grid.Row="2"
                                HorizontalAlignment="Stretch"
                                Click="UncheckAllButtonClicked"
                                Style="{DynamicResource ChromelessButtonStyle}"
                                ToolTip="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Uncheck all filters', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                x:Name="UncheckAllButton">
                            <iconPacks:PackIconMaterial Kind="TableColumnRemove" Foreground="{StaticResource EliteOrangeBrush}" />
                        </Button>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding Filters.CategoryFilters}"
                                  Grid.Row="2"
                                  Grid.ColumnSpan="4"
                                  Grid.Column="0"
                                  Background="#111111">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            Tag="{Binding}"
                                            MouseLeftButtonUp="CategoryFilterPanelClicked"
                                            Margin="0,0,0,3">
                                    <TextBlock Width="Auto"
                                               Foreground="WhiteSmoke"
                                               FontFamily="/Resources/Fonts/#Euro Caps"
                                               HorizontalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static localization:Languages.Instance}">
                                                <Binding Path="Label" />
                                                <Binding Path="DataContext.Languages.CurrentLanguage"
                                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <CheckBox Width="10"
                                              Height="10"
                                              IsChecked="{Binding Checked, Mode=TwoWay}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <Grid Grid.Row="1"
                      Focusable="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" x:Name="BlueprintsRow"/>
                        <RowDefinition Height="Auto" x:Name="ShoppingListSplitterRow"/>
                        <RowDefinition Height="Auto" x:Name="ShoppingListRow"/>
                    </Grid.RowDefinitions>
                    <!-- BLUEPRINTS -->
                    <DataGrid x:Name="Blueprints"
                              IsReadOnly="True"
                              FontFamily="/Resources/Fonts/#Euro Caps"
                              Background="{StaticResource BackgroundBrush}"
                              BorderBrush="{StaticResource EliteOrangeBrush}"
                              HorizontalAlignment="Stretch"
                              ColumnWidth="*"
                              FontSize="14.5"
                              IsSynchronizedWithCurrentItem="False"
                              HorizontalContentAlignment="Stretch"
                              HorizontalScrollBarVisibility="Hidden"
                              SelectionUnit="FullRow"
                              PreviewMouseLeftButtonDown="DataGridOnPreviewMouseLeftButtonDown"
                              AutoGenerateColumns="False"
                              Loaded="DataGridLoaded"
                              ItemsSource="{Binding State.Blueprints}"
                              DataContext="{Binding}"
                              Focusable="False"
                              Grid.Row="0"
                              Style="{DynamicResource BlueprintGridStyle}"
                              HeadersVisibility="All">
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Grid Background="#043A59"
                                      Focusable="False"
                                      Style="{StaticResource BlueprintDetailsGridStyle}">
                                    <Grid.LayoutTransform>
                                        <ScaleTransform ScaleY="0"/>
                                    </Grid.LayoutTransform>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="0.3*" />
                                        <ColumnDefinition Width="0.3*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0"
                                          Focusable="False"
                                          Margin="10,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="0"
                                                      Focusable="False"
                                                      Margin="0,0,7,0"
                                                      FontSize="13">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run>
                                                            <Run.Text>
                                                                <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Material">
                                                                    <Binding Path="Entry.Data.Kind"/>
                                                                    <Binding Path="DataContext.Languages.CurrentLanguage"
				                                                                RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                                </MultiBinding>
                                                            </Run.Text>
                                                        </Run>
                                                        <Run Text=":" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="1"
                                                      Focusable="False"
                                                      Margin="0,0,7,0"
                                                      FontSize="13">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Modular Terminals">
                                                                <Binding Path="Entry.Data.Name"/>
                                                                <Binding Path="DataContext.Languages.CurrentLanguage"
				                                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="2"
                                                      Focusable="False"
                                                      Margin="0,0,7,0"
                                                      FontSize="13">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="(" />
                                                        <Run Text="{Binding Entry.Count}" />
                                                        <Run Text="/" />
                                                        <Run Text="{Binding Size, Mode=OneWay}" />
                                                        <Run Text=")" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="3"
                                                      Focusable="False"
                                                      Margin="0,0,7,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <iconPacks:PackIconMaterial Kind="Check"
                                                                                    Foreground="Green" >
                                                            <iconPacks:PackIconMaterial.Visibility>
                                                                <MultiBinding Converter="{StaticResource IngredientToVisibility}"
                                                                              FallbackValue="Modular Terminals"
                                                                              Mode="OneWay">
                                                                    <Binding Path="Entry.Count"/>
                                                                    <Binding Path="Size"/>
                                                                </MultiBinding>
                                                            </iconPacks:PackIconMaterial.Visibility>
                                                        </iconPacks:PackIconMaterial>
                                                        <iconPacks:PackIconMaterial Height="14" Kind="Close"
                                                                                    Foreground="Red" >
                                                            <iconPacks:PackIconMaterial.Visibility>
                                                                <MultiBinding Converter="{StaticResource IngredientToVisibility}"
                                                                              FallbackValue="Modular Terminals"
                                                                              Mode="OneWay"
                                                                              ConverterParameter="Inverted">
                                                                    <Binding Path="Entry.Count"/>
                                                                    <Binding Path="Size"/>
                                                                </MultiBinding>
                                                            </iconPacks:PackIconMaterial.Visibility>
                                                        </iconPacks:PackIconMaterial>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <Grid Grid.Column="1"
                                          Focusable="False"
                                          Margin="0,0,40,0"
                                          HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ItemsControl ItemsSource="{Binding Effects}"
                                                      Grid.Column="0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Property}"
                                                               FontSize="13"
                                                               FontWeight="Light"
                                                               HorizontalAlignment="Left"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <ItemsControl ItemsSource="{Binding Effects}"
                                                      Grid.Column="1">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Effect}"
                                                               FontSize="13"
                                                               FontWeight="Light"
                                                               FontFamily="Consolas"
                                                               HorizontalAlignment="Right"
                                                               Margin="5,0,0,0"
                                                               Foreground="{Binding IsGood, Converter={StaticResource BooleanToGoodEffectColorConverter}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>


                                    <Grid Grid.Column="2"
                                          HorizontalAlignment="Right">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <ItemsControl Margin="0,0,10,0"
                                                      FontSize="13"
                                                      Grid.Row="0"
                                                      ItemsSource="{Binding Engineers}"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Top" />
                                        <Button x:Name="IncrementButton"
                                                Focusable="False"
                                                Margin="0,5,0,0"
                                                Grid.Row="1"
                                                MinHeight="30"
                                                VerticalContentAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Tag="{Binding}"
                                                Click="IncrementShoppingList"
                                                Style="{DynamicResource ChromelessButtonStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Shopping List',
                                                              FallbackValue='Shopping List'}"
                                                           Foreground="AliceBlue"
                                                           FontSize="13" />
                                                <Path x:Name="PolygonUp"
                                                      Width="14"
                                                      Height="14"
                                                      Margin="6 2 2 2"
                                                      Fill="{DynamicResource EliteOrangeBrush}"
                                                      Data="F1 M 35,19L 41,19L 41,35L 57,35L 57,41L 41,41L 41,57L 35,57L 35,41L 19,41L 19,35L 35,35L 35,19 Z "
                                                      Stretch="Fill" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                        <DataGrid.Columns>
                            <!-- GRADE -->
                            <DataGridTextColumn Header="G"
                                                Binding="{Binding Grade}"
                                                IsReadOnly="True"
                                                Width="30"
                                                CanUserResize="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- TYPE -->
                            <DataGridTextColumn IsReadOnly="True"
                                                MinWidth="130"
                                                MaxWidth="130"
                                                CanUserResize="False"
                                                SortMemberPath="TranslatedType">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Plasma Accelerator">
                                        <Binding Path="ShortenedType"/>
                                        <Binding Path="DataContext.Languages.CurrentLanguage"
                                                 RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Type',
                                                              FallbackValue='Type'}"/>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        <Setter Property="MaxHeight" Value="50" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- NAME -->
                            <DataGridTextColumn IsReadOnly="True"
                                                Width="*"
                                                CanUserResize="False"
                                                SortMemberPath="TranslatedName">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Short Range Blaster">
                                        <Binding Path="BlueprintName"/>
                                        <Binding Path="DataContext.Languages.CurrentLanguage"
                                                     RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Name',
                                                              FallbackValue='Name'}"/>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- PROGRESS -->
                            <DataGridTemplateColumn IsReadOnly="True"
                                                    SortMemberPath="ProgressSorting"
                                                    Width="*"
                                                    MaxWidth="150"
                                                    CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Progress',
                                                              FallbackValue='Progress'}"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel Orientation="Vertical">
                                                <Grid HorizontalAlignment="Center">
                                                    <TextBlock Visibility="{Binding CanCraftCount, Converter={StaticResource IntegerToVisibility}}">
                                                        <Run Text="{Binding DataContext.Languages.CurrentLanguage,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                                            Converter={x:Static localization:Languages.Instance},
                                                                            ConverterParameter='can craft',
                                                                            FallbackValue='can craft'}" /> 
                                                        <Run Text="{Binding CanCraftCount, Mode=OneWay}" />
                                                    </TextBlock>
                                                    <TextBlock HorizontalAlignment="Center"
                                                               Visibility="{Binding CanCraftCount, Converter={StaticResource IntegerToVisibilityReversed}}"
                                                               Text="{Binding Progress, Mode=OneWay, Converter={StaticResource DoubleToPercent}}"/>
                                                </Grid>
                                                <controls:MetroProgressBar Value="{Binding Progress, Mode=OneWay}"
                                                                           Background="WhiteSmoke" Foreground="{Binding Category, Converter={StaticResource BlueprintCategoryToColor}}" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- FAVORITE / IGNORED BUTTONS -->
                            <DataGridTemplateColumn IsReadOnly="True" Width="100" CanUserResize="False">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ToggleButton Width="40"
                                                          Height="40"
                                                          HorizontalAlignment="Left"
                                                          Margin="10,0,0,0"
                                                          VerticalAlignment="Center"
                                                          IsChecked="{Binding Favorite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          ToolTip="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Favorite', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                                          Foreground="Black">
                                                <iconPacks:PackIconMaterial Kind="Star" Foreground="{Binding Category, Converter={StaticResource BlueprintCategoryToColor}}" />
                                            </ToggleButton>
                                            <ToggleButton x:Name="IgnoreBluebrintButton"
                                                          Width="40"
                                                          Height="40"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,10,0"
                                                          VerticalAlignment="Center"
                                                          IsChecked="{Binding Ignored, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          ToolTip="{Binding DataContext.Languages.CurrentLanguage, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Ignored', RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                                          Foreground="Black">
                                                <iconPacks:PackIconMaterial Kind="CloseCircleOutline" Foreground="Black" />
                                            </ToggleButton>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- SPLITTER -->
                    <GridSplitter Height="3"
                                  Grid.Row="1"
                                  Background="DarkRed"
                                  x:Name="ShoppingListSplitter"
                                  HorizontalAlignment="Stretch"
                                  MouseDoubleClick="ShoppingListSplitterDoubleClicked"
                                  Visibility="{Binding ShoppingList.List, Converter={StaticResource ListToVisibility}}" />

                    <!-- SHOPPING LIST -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Hidden">
                        <DataGrid x:Name="ShoppingList"
                                  IsReadOnly="True"
                                  FontFamily="/Resources/Fonts/#Euro Caps"
                                  Background="{StaticResource BackgroundBrush}"
                                  BorderBrush="{StaticResource EliteOrangeBrush}"
                                  HorizontalAlignment="Stretch"
                                  FontSize="14.5"
                                  IsSynchronizedWithCurrentItem="False"
                                  HorizontalContentAlignment="Stretch"
                                  SelectionUnit="FullRow"
                                  AutoGenerateColumns="False"
                                  Margin="0,0,14,0"
                                  Loaded="DataGridLoaded"
                                  ItemsSource="{Binding ShoppingList.List}"
                                  Visibility="{Binding ShoppingList.List, Converter={StaticResource ListToVisibility}, Mode=OneWay}"
                                  DataContext="{Binding}"
                                  Style="{DynamicResource BlueprintGridStyle}"
                                  HeadersVisibility="None"
                                  RowDetailsVisibilityMode="Visible"
                                  CanUserSortColumns="False"
                                  Focusable="False"
                                  PreviewMouseLeftButtonDown="DataGridOnPreviewMouseLeftButtonDown"
                                  SelectedIndex="{Binding ShoppingListItem, Mode=OneWay}">
                            <DataGrid.RowHeaderTemplate>
                                <DataTemplate>
                                    <Grid IsHitTestVisible="False" />
                                </DataTemplate>
                            </DataGrid.RowHeaderTemplate>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid Background="#1D2242"
                                      Focusable="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0"
                                          Focusable="False"
                                          Margin="10,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- KIND -->
                                            <ItemsControl ItemsSource="{Binding Ingredients}"
                                                          Grid.Column="0"
                                                          Margin="0,0,7,0"
                                                          Focusable="False"
                                                          x:Name="ShoppingListIngredients"
                                                          FontSize="13">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock DataContext="{Binding}"
                                                                   Tag="{Binding Path=ItemsSource, ElementName=ShoppingListComposition}"
                                                                   MouseEnter="ShoppingListIngredientMouseEnter"
                                                                   MouseLeave="ShoppingListIngredientMouseLeave"
                                                                   Foreground="{Binding ShoppingListHighlighted, Converter={StaticResource BooleanToShoppingListHighlightColor}}">
                                                            <Run>
                                                                <Run.Text>
                                                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Material">
                                                                        <Binding Path="Entry.Data.Kind"/>
                                                                        <Binding Path="DataContext.Languages.CurrentLanguage"
				                                                                    RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                                    </MultiBinding>
                                                                </Run.Text>
                                                            </Run>
                                                            <Run Text=":" />
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- NAME -->
                                            <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="1"
                                                      Margin="0,0,7,0"
                                                      Focusable="False"
                                                      FontSize="13">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock DataContext="{Binding}"
                                                                   Tag="{Binding Path=ItemsSource, ElementName=ShoppingListComposition}"
                                                                   MouseEnter="ShoppingListIngredientMouseEnter"
                                                                   MouseLeave="ShoppingListIngredientMouseLeave"
                                                                   Foreground="{Binding ShoppingListHighlighted, Converter={StaticResource BooleanToShoppingListHighlightColor}}">
                                                            <TextBlock.Text>
                                                                <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Modular Terminals">
                                                                    <Binding Path="Entry.Data.Name"/>
                                                                    <Binding Path="DataContext.Languages.CurrentLanguage"
				                                                         RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- COUNT/NEEDED -->
                                            <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="2"
                                                      Margin="0,0,7,0"
                                                      Focusable="False"
                                                      FontSize="13">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock DataContext="{Binding}"
                                                                   Tag="{Binding Path=ItemsSource, ElementName=ShoppingListComposition}"
                                                                   MouseEnter="ShoppingListIngredientMouseEnter"
                                                                   MouseLeave="ShoppingListIngredientMouseLeave"
                                                                   Foreground="{Binding ShoppingListHighlighted, Converter={StaticResource BooleanToShoppingListHighlightColor}}">
                                                            <Run Text="(" />
                                                            <Run Text="{Binding Entry.Count}" />
                                                            <Run Text="/" />
                                                            <Run Text="{Binding Size, Mode=OneWay}" />
                                                            <Run Text=")" />
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- READY/NOT READY -->
                                            <ItemsControl ItemsSource="{Binding Ingredients}"
                                                      Grid.Column="3"
                                                      Focusable="False"
                                                      Margin="0,0,7,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <TextBlock Text="✔️"
                                                                       Foreground="Green"
                                                                       FontSize="13">
                                                                <TextBlock.Visibility>
                                                                    <MultiBinding Converter="{StaticResource IngredientToVisibility}"
                                                                              FallbackValue="Modular Terminals"
                                                                              Mode="OneWay">
                                                                        <Binding Path="Entry.Count"/>
                                                                        <Binding Path="Size"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Visibility>
                                                            </TextBlock>
                                                            <TextBlock Text="✖"
                                                                       Foreground="Red"
                                                                       FontSize="13">
                                                                <TextBlock.Visibility>
                                                                    <MultiBinding Converter="{StaticResource IngredientToVisibility}"
                                                                              FallbackValue="Modular Terminals"
                                                                              Mode="OneWay"
                                                                              ConverterParameter="Inverted">
                                                                        <Binding Path="Entry.Count"/>
                                                                        <Binding Path="Size"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Visibility>
                                                            </TextBlock>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>

                                        <ItemsControl ItemsSource="{Binding DataContext.ShoppingList.CompositionForGui, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Right"
                                                      x:Name="ShoppingListComposition"
                                                      FontSize="15"
                                                      Margin="0,5,0,0"
                                                      Width="320">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"
                                                               HorizontalAlignment="Right" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="3,3,3,3"
                                                          HorizontalAlignment="Left"
                                                          Width="{Binding Width}">
                                                        <Grid.ToolTip>
                                                            <TextBlock Text="{Binding Tooltip}" />
                                                        </Grid.ToolTip>
                                                        <Rectangle Fill="{Binding Category, Converter={StaticResource BlueprintCategoryToColor}}"
                                                                   Opacity="0.1"/>
                                                        <Button Content="❌"
                                                                Tag="{Binding Composition}"
                                                                Style="{DynamicResource ChromelessButtonStyle}"
                                                                Foreground="Red"
                                                                FontWeight="Black"
                                                                VerticalAlignment="Top"
                                                                HorizontalAlignment="Right"
                                                                FontSize="11"
                                                                Margin="2"
                                                                VerticalContentAlignment="Center"
                                                                Click="RemoveShoppingListBlock" />
                                                        <ToggleButton IsChecked="{Binding ShowAllGrades, Mode=OneWay}"
                                                                      Click="ShowAllGradesClicked"
                                                                      Tag="{Binding}"
                                                                      Visibility="{Binding Converter={StaticResource ShoppingListBlockToAllGradesVisibility}}"
                                                                      IsEnabled="{Binding BlueprintsWithCount, Converter={StaticResource CompositionCountToEnabled}}"
                                                                      VerticalAlignment="Top"
                                                                      HorizontalAlignment="Left"
                                                                      Width="25"
                                                                      Height="25"
                                                                      Margin="2"
                                                                      Style="{StaticResource CircleToggleButton}"
                                                                      FontSize="11"/>
                                                        <Border BorderThickness="0.5"
                                                            BorderBrush="{Binding Highlighted, Converter={StaticResource BooleanToShoppingListBlockHighlightColor}}">
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Label}"
                                                                           HorizontalAlignment="Center"
                                                                           FontSize="13"/>
                                                                <ItemsControl ItemsSource="{Binding Composition}"
                                                                              HorizontalAlignment="Center">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal"/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Grid MouseEnter="ShoppingListBlueprintMouseEnter"
                                                                                  MouseLeave="ShoppingListBlueprintMouseLeave"
                                                                                  DataContext="{Binding}"
                                                                                  Margin="0,0,0,5"
                                                                                  Tag="{Binding Path=ItemsSource, ElementName=ShoppingListIngredients}">
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="15"/>
                                                                                    <RowDefinition Height="20"/>
                                                                                </Grid.RowDefinitions>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>
                                                                                <Border Grid.Column="0"
                                                                                        Grid.Row="1"
                                                                                        x:Name="Separator"
                                                                                        Width="1"
                                                                                        BorderThickness="0.3"
                                                                                        Height="15"
                                                                                        VerticalAlignment="Bottom"
                                                                                        Margin="0,0,0,-5"
                                                                                        BorderBrush="{StaticResource SynthesisBlueBrush}"/>
                                                                                <TextBlock Foreground="{Binding Item1.ShoppingListHighlighted, Converter={StaticResource BooleanToShoppingListHighlightColor}}"
                                                                                           VerticalAlignment="Top"
                                                                                           Grid.Column="0"
                                                                                           Grid.Row="0"
                                                                                           Margin="-5,0,0,0"
                                                                                           Padding="-5,0,-5,0"
                                                                                           HorizontalAlignment="Center"
                                                                                           Text="{Binding Item1.GradeString, Mode=OneWay}"
                                                                                           Grid.ColumnSpan="4"/>
                                                                                <Button Content="-"
                                                                                        Tag="{Binding Item1}"
                                                                                        Click="DecrementShoppingList"
                                                                                        Foreground="Red"
                                                                                        FontWeight="Black"
                                                                                        Grid.Row="1"
                                                                                        VerticalAlignment="Center"
                                                                                        VerticalContentAlignment="Center"
                                                                                        FontSize="22"
                                                                                        Style="{DynamicResource ChromelessButtonStyle}"
                                                                                        Margin="5,0,5,0"
                                                                                        Grid.Column="1" />
                                                                                <TextBox Text="{Binding Item2, Mode=OneWay}"
                                                                                         Tag="{Binding}"
                                                                                         Foreground="Wheat"
                                                                                         Background="Transparent"
                                                                                         BorderThickness="0"
                                                                                         Padding="-5,0,-5,0"
                                                                                         HorizontalContentAlignment="Center"
                                                                                         HorizontalAlignment="Center"
                                                                                         CaretBrush="Wheat"
                                                                                         LostFocus="ShoppingListCountTextLostFocus"
                                                                                           VerticalAlignment="Center"
                                                                                           Grid.Row="1"
                                                                                           Margin="0,7,0,0"
                                                                                           Grid.Column="2" />
                                                                                <Button Content="+"
                                                                                        Tag="{Binding Item1}"
                                                                                        Click="IncrementShoppingList"
                                                                                        FontWeight="Black"
                                                                                        FontSize="22"
                                                                                        VerticalAlignment="Center"
                                                                                        VerticalContentAlignment="Center"
                                                                                        Foreground="Green"
                                                                                        Grid.Row="1"
                                                                                        Style="{DynamicResource ChromelessButtonStyle}"
                                                                                        Grid.Column="3"
                                                                                        Margin="5,0,5,0" />
                                                                            </Grid>
                                                                            <DataTemplate.Triggers>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" TargetName="Separator" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </DataTemplate.Triggers>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn IsReadOnly="True"
                                                    Width="*"
                                                    CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="50"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Short Range Blaster">
                                                            <Binding Path="BlueprintName" />
                                                            <Binding Path="DataContext.Languages.CurrentLanguage"
                                                                 RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}" />
                                                        </MultiBinding>

                                                    </TextBlock.Text>
                                                </TextBlock>

                                                <StackPanel Orientation="Vertical"
                                                        VerticalAlignment="Center"
                                                        Grid.Column="2"
                                                        Margin="20,0,0,0">
                                                    <TextBlock HorizontalAlignment="Center"
                                                           Text="{Binding Progress, Mode=OneWay, Converter={StaticResource DoubleToPercent}}" />
                                                    <controls:MetroProgressBar Value="{Binding Progress, Mode=OneWay}"
                                                                           Background="WhiteSmoke" Foreground="DarkRed" />
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical"
                                                            HorizontalAlignment="Center"
                                                            Grid.Column="3"
                                                            Margin="0,0,0,3"
                                                            Tag="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
                                                    <StackPanel.ToolTip>
                                                        <ToolTip DataContext="{Binding Path=PlacementTarget, RelativeSource={x:Static RelativeSource.Self}}">
                                                            <TextBlock Text="{Binding Tag, Converter={x:Static localization:Languages.Instance}, ConverterParameter='EDEngineer will try to remove blueprints from your shopping list if you craft them in game'}"/>
                                                        </ToolTip>
                                                    </StackPanel.ToolTip>
                                                    <TextBlock Width="Auto"
                                                               Foreground="WhiteSmoke"
                                                               FontFamily="/Resources/Fonts/#Euro Caps"
                                                               HorizontalAlignment="Center"
                                                               Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Sync?'}"/>
                                                    <CheckBox IsChecked="{Binding DataContext.ShoppingList.SynchronizeWithLogs, Mode=TwoWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                              HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>

            </Grid>
        </Grid>

        <!-- META DATA -->

        <Grid Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="3">
            <i:Interaction.Behaviors>
                <f:ScaleFontBehavior FontRatio="{Binding DataContext.GraphicSettings.BottomRatio, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
            </i:Interaction.Behaviors>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button HorizontalAlignment="Stretch"
                    FontSize="14"
                    Content="{Binding DataContext.Languages.CurrentLanguage, 
                RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, 
                Converter={x:Static localization:Languages.Instance}, 
                ConverterParameter='Reset',
                FallbackValue='Reset'}"
                    Visibility="Collapsed"
                    FontFamily="/Resources/Fonts/#Euro Caps"
                    x:Name="ResetWindowPositionButton"
                    Click="ResetWindowPositionButtonClicked"
                    Grid.Column="0" />
            <Button HorizontalAlignment="Stretch"
                    FontSize="14"
                    FontFamily="/Resources/Fonts/#Euro Caps"
                    x:Name="ToggleEditMode"
                    Content="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Unlock Window', FallbackValue='Unlock Window'}"
                    Click="ToggleEditModeChecked"
                    d:IsHidden="False"
                    Grid.Column="1" />
            <TextBlock HorizontalAlignment="Stretch"
                       FontSize="16"
                       Grid.Column="2"
                       Foreground="{StaticResource TechnologyBrush}"
                       Margin="10,0,0,0"
                       TextAlignment="Left"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontFamily="/Resources/Fonts/#Euro Caps">
                <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='System:', FallbackValue='System: '}" />
                <Run Text="{Binding CurrentCommander.Value.State.History.System}" />
            </TextBlock>
            <TextBlock HorizontalAlignment="Stretch"
                       FontSize="16"
                       Grid.Column="3"
                       Foreground="{StaticResource EliteOrangeBrush}"
                       Margin="10,0,0,0"
                       TextAlignment="Left"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontFamily="/Resources/Fonts/#Euro Caps">
                <Run Text="{Binding DataContext.Languages.CurrentLanguage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={x:Static localization:Languages.Instance}, ConverterParameter='Last update: ', FallbackValue='Last Update: '}" />
                <Run Text="{Binding CurrentCommander.Value.LastUpdate, Converter={StaticResource InstantToString}}" />
                <Run Text=" (UTC)"/>
            </TextBlock>
            <Button HorizontalAlignment="Right"
                    FontSize="15"
                    Grid.Column="4"
                    Foreground="DarkCyan"
                    Background="Transparent"
                    Margin="0,0,10,0"
                    Style="{DynamicResource ChromelessButtonStyle}"
                    Click="ChangeFolderButtonClicked"
                    FontFamily="/Resources/Fonts/#Euro Caps">
                <TextBlock Text="{Binding LogDirectory}" TextWrapping="Wrap" />
            </Button>
        </Grid>
    </Grid>

</Window>