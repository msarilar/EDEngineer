                                                    CanUserResize="False">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Progress',
                                                              FallbackValue='Progress'}"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel Orientation="Vertical">
                                                <Grid HorizontalAlignment="Center">
                                                    <TextBlock Visibility="{Binding CanCraftCount, Converter={StaticResource IntegerToVisibility}}">
                                                        <Run Text="{Binding DataContext.Languages.CurrentLanguage,
                                                                            RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                                            Converter={x:Static localization:Languages.Instance},
                                                                            ConverterParameter='can craft',
                                                                            FallbackValue='can craft'}" /> 
                                                        <Run Text="{Binding CanCraftCount, Mode=OneWay}" />
                                                    </TextBlock>
                                                    <TextBlock HorizontalAlignment="Center"
                                                               Visibility="{Binding CanCraftCount, Converter={StaticResource IntegerToVisibilityReversed}}"
                                                               Text="{Binding Progress, Mode=OneWay, Converter={StaticResource DoubleToPercent}}"/>
                                                </Grid>
                                                <controls:MetroProgressBar Value="{Binding Progress, Mode=OneWay}"
                                                                           Background="WhiteSmoke" Foreground="{Binding Synthesis, Converter={StaticResource BooleanToSynthesisColor}}" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- FAVORITE / IGNORED BUTTONS -->
                            <DataGridTemplateColumn IsReadOnly="True" Width="100" CanUserResize="False">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ToggleButton Width="40"
                                                          Height="40"
