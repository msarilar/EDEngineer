                                                Focusable="False"
                                                Margin="0,5,0,0"
                                                Grid.Row="1"
                                                MinHeight="30"
                                                VerticalContentAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Tag="{Binding}"
                                                Click="IncrementShoppingList"
                                                Style="{DynamicResource ChromelessButtonStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Shopping List',
                                                              FallbackValue='Shopping List'}"
                                                           Foreground="AliceBlue"
                                                           FontSize="13" />
                                                <Path x:Name="PolygonUp"
                                                      Width="14"
                                                      Height="14"
                                                      Margin="6 2 2 2"
                                                      Fill="{DynamicResource EliteOrangeBrush}"
                                                      Data="F1 M 35,19L 41,19L 41,35L 57,35L 57,41L 41,41L 41,57L 35,57L 35,41L 19,41L 19,35L 35,35L 35,19 Z "
                                                      Stretch="Fill" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                        <DataGrid.Columns>
                            <!-- GRADE -->
                            <DataGridTextColumn Header="G"
                                                Binding="{Binding Grade}"
                                                IsReadOnly="True"
                                                Width="30"
                                                CanUserResize="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- TYPE -->
                            <DataGridTextColumn IsReadOnly="True"
                                                MinWidth="130"
                                                MaxWidth="130"
                                                CanUserResize="False"
                                                SortMemberPath="TranslatedType">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{x:Static localization:Languages.Instance}" FallbackValue="Plasma Accelerator">
                                        <Binding Path="Type"
                                                 Converter="{StaticResource BlueprintNameShortener}"/>
                                        <Binding Path="DataContext.Languages.CurrentLanguage"
                                                 RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="{Binding DataContext.Languages.CurrentLanguage,
                                                              RelativeSource={RelativeSource AncestorType={x:Type views:MainWindow}},
                                                              Converter={x:Static localization:Languages.Instance},
                                                              ConverterParameter='Type',
                                                              FallbackValue='Type'}"/>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        <Setter Property="MaxHeight" Value="50" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- NAME -->
                            <DataGridTextColumn IsReadOnly="True"
